{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{.Shell}}",
  "final_space": true,
  "version": 4,
  "transient_prompt": {
    "foreground": "#D4AAFC",
    "template": "⮞ "
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#E36464",
          "template": "{{ .UserName }}<#E36464>@</>{{ .HostName }} "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#56B6C2",
          "template": "{{ .Path }} ",
          "options": {
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#DDB15F",
          "template": "({{ .HEAD }}) ",
          "options": {
            "branch_icon": ""
          }
        },
        {
          "type": "python",
          "style": "plain",
          "foreground": "#62ED8B",
          "template": "({{ .Major }}.{{ .Minor }}) ",
          "options": {
            "display_mode": "environment"
          }
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#D4AAFC",
          "template": "{{ .FormattedMs }} ",
          "options": {
            "threshold": 0,
            "style": "dallas",
            "always_enabled": true
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#D4AAFC",
          "template": "⮞"
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "#E36464",
          "template": " \uf00d"
        }
      ]
    }
  ]
}
